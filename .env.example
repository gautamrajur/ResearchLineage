# API Configuration
SEMANTIC_SCHOLAR_API_KEY=
SEMANTIC_SCHOLAR_BASE_URL=https://api.semanticscholar.org/graph/v1
SEMANTIC_SCHOLAR_RATE_LIMIT=100
ARXIV_BASE_URL=http://export.arxiv.org/api/query
OPENALEX_BASE_URL=https://api.openalex.org

# ══════════════════════════════════════════════════════════════════════
# Local/Airflow Postgres (used by main pipeline for metadata)
# ══════════════════════════════════════════════════════════════════════
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=researchlineage
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# ══════════════════════════════════════════════════════════════════════
# Cloud SQL (GCP) via Proxy (used by retry_failed_pdfs DAG)
# Run Cloud SQL Proxy: ./cloud-sql-proxy --port 5433 <INSTANCE_CONNECTION_NAME>
# ══════════════════════════════════════════════════════════════════════
CLOUD_SQL_HOST=localhost
CLOUD_SQL_PORT=5433
CLOUD_SQL_DB=researchlineage
CLOUD_SQL_USER=your_cloud_sql_user
CLOUD_SQL_PASSWORD=your_cloud_sql_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=172800

# Pipeline Configuration
MAX_CITATION_DEPTH=3
MAX_PAPERS_PER_LEVEL=15
MIN_CITATION_COUNT=10
INFLUENTIAL_CITATION_WEIGHT=2.0

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Environment
ENVIRONMENT=development

# GCS (optional – used for PDF storage)
# Auth: use Application Default Credentials (ADC). Do not set GOOGLE_APPLICATION_CREDENTIALS when using ADC.
# gcloud auth application-default login
GCS_BUCKET=research-lineage-pdfs
GCS_PREFIX=pdfs/

# SMTP Settings (for email alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL_FROM=your_email@gmail.com
ALERT_EMAIL_TO=recipient@example.com
