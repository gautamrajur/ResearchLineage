# API Configuration
SEMANTIC_SCHOLAR_API_KEY=
SEMANTIC_SCHOLAR_BASE_URL=https://api.semanticscholar.org/graph/v1
SEMANTIC_SCHOLAR_RATE_LIMIT=100
ARXIV_BASE_URL=http://export.arxiv.org/api/query
OPENALEX_BASE_URL=https://api.openalex.org

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=research_lineage
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_TTL=172800

# Pipeline Configuration
MAX_CITATION_DEPTH=3
MAX_PAPERS_PER_LEVEL=15
MIN_CITATION_COUNT=10
INFLUENTIAL_CITATION_WEIGHT=2.0

# Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Environment
ENVIRONMENT=development

# SMTP alert settings (leave blank to disable email alerts)
# For Gmail: enable 2FA, then generate an App Password at myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your.email@gmail.com
SMTP_PASSWORD=abcd efgh ijkl mnop
ALERT_EMAIL_FROM=your.email@gmail.com
ALERT_EMAIL_TO=alerts@yourdomain.com

# GCP credentials directory for Cloud SQL Proxy
# Mac/Linux: /Users/<your-username>/.config/gcloud
# Windows:   C:/Users/<your-username>/AppData/Roaming/gcloud
GCLOUD_CONFIG_DIR=/Users/your-username/.config/gcloud

SEMANTIC_SCHOLAR_API_KEY=your_s2_key
GEMINI_API_KEY=
GCS_BUCKET_NAME=researchlineage-data
GCS_PROJECT_ID=mlops-researchlineage